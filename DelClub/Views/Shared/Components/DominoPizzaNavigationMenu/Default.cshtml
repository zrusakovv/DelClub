@model IEnumerable<string>

    <a class="btn btn-light"
       asp-action="DominoPizzaList" asp-controller="DominoPizza"
       asp-route-caregory="">
        Все категории
    </a>

@foreach (string category in Model)
{
    <a class="btn btn-light @(category == ViewBag.SelectedCategory ? "btn-info" : "btn-secondary")"
       asp-action="DominoPizzaList"
       asp-controller="DominoPizza"
       asp-route-category="@category">
        @category
    </a>
}