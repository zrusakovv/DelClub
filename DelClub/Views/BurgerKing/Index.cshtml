@model IEnumerable<BurgerKing>

@{ 
    ViewBag.Title = "All BurgerKing";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th class="text-center">Img</th>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach(var i in Model)
    {
        <tr>
            <td class="text-right">@i.Id</td>
            <td><img width="100" height="85" class="rounded" src="@i.Img" asp-append-version="true"></td>
            <td>@i.Name</td>
            <td class="text-left">@i.Description</td>
            <td class="text-left">@i.Category</td>
            <td class="text-right">@i.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-Id="@i.Id">
                        Edit
                    </a>
                    <input type="hidden" name="Id" value="@i.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button> 
                </form>
                
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>