@model BurgerKingsListViewModel

<div class="row mr-2">
    <div class="col-md-9 border">

        <div class="ml-5 fa fa-arrow-left mt-5">
            <a class="text-dark" asp-action="Index" asp-controller="Home">Все рестораны</a>
        </div>

        <h1 class="ml-5 mt-3">Burger King</h1>

        <span class=" badge badge-light" style="float:right">
            <img width="100" height="85" class="rounded" src="~/img/ImgLable/BurgerKing.jpg" asp-append-version="true">
        </span>

        <h5 class="ml-5 mt-3">
            <small class="badge badge-light text-secondary">
                55 мин
            </small>
            <small class="badge badge-light text-secondary">
                От 1 Р
            </small>
            <small class="badge badge-light text-secondary">
                <i class="fa fa-star" aria-hidden="true">4,8</i>
            </small>
        </h5>

            <div id="categories" class="ml-5 mt-5">
                @await Component.InvokeAsync("BurgerKingNavigationMenu")
            </div>
        

        @foreach (var f in Model.BurgerKings)
        {
            <a class="btn btn-light mt-5 ml-4" asp-action="ListFood" asp-controller="Food">
                <img width="250" height="200" class="rounded" src="@f.Img" asp-append-version="true">


                <p class="align-justify">
                    @f.Name
                </p>

                <h4>
                    <span class="badge badge-pill badge-light" style="float:left">
                        <small class="badge badge-light text-secondary">
                            @f.Price.ToString("c")
                        </small>

                    </span>
                    @Html.Partial("BurgerKingSummary", f)
                </h4>
            </a>
        }
    </div>
    <div class="col-md-3">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Количество</th>
                    <th>Назваие</th>
                    <th class="text-right">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Cart.Lines)
                {
                    <tr>
                        <td class="text-center">@line.Quantity</td>
                        <td class="text-left">@line.BurgerKing.Name</td>
                        <td class="text-right">@line.BurgerKing.Price.ToString("c")</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="Id" value="@line.BurgerKing.Id" />
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.Cart.ComputeTotalValue().ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class=" text-right text-success">
            <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">
                Оплатить
            </a>
        </div>
    </div>
</div>

